import pandas
import xlsxwriter
import pandas as pd



list_menu = []
list_price = []


print("ยินดีต้อนรับ เข้าสู่โปรแกรมสร้างรายการเมนูอาหาร")
while True:
    login = input("ต้องการกรอกข้อมูลอาหาร กด 1 / ต้องการออกจากโปรแกรม ไม่ต้องกด 1 : ")
    if login == "1":
        Menu = input("กรอก เมนู : ")
        list_menu.append(Menu)
        Price = int(input("กรอกราคาของเมนู : "))
        list_price.append(Price)
        print("----------------------------")
    else:
        break


print("")

Food_list = pd.DataFrame({"Menu": list_menu, "Price": list_price})
print(Food_list)

writer = pd.ExcelWriter("Food_Pandas.xlsx", engine='xlsxwriter')
Food_list.to_excel(writer, sheet_name="หน้าที่ 1")
writer.save()

Read = pd.read_excel("Food_pandas.xlsx")
print(Read)
